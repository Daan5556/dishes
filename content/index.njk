{% set cooked = collections.publishedDishes.length %}
{% set total = collections.dish.length %}

<p>Cooked dishes: {{ cooked }}</p>
<p>Total dishes: {{ total }}</p>

{% for region in regions %}
  <h2>{{ region | capitalize }}</h2>
  <ul>
    {% for dish in collections[region] | sort(attribute='data.country') %}
      {% if dish.data.draft %}
        <li>{{ dish.data.country }}</li>
      {% else %}
        <li><a href="{{ dish.url }}">{{ dish.data.country }}</a></li>
      {% endif %}
    {% endfor %}
  </ul>
{% endfor %}
